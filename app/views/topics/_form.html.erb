<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 10, cols: 50 %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>
  <% if !@topic.node_id %>
  <div class="field">
    <%= f.label :node_id %><br>
    <%= f.select :node_id, Node.all.collect{|n| [n.name,n.id]} %>
  </div>
  <% else %>
    <%= f.hidden_field :node_id %>
  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
